<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/dialog_open_code_view"
        android:layout_width="325dp"
        android:layout_height="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_rectangle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일회용 키 발급"
        android:textSize="18sp"
        android:textColor="#FC7336"
        app:layout_constraintTop_toTopOf="@+id/dialog_open_code_view"
        app:layout_constraintRight_toRightOf="@+id/dialog_open_code_view"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_open_code_view"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/openCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/dialog_open_code_view"
        app:layout_constraintRight_toRightOf="@+id/dialog_open_code_view"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_open_code_view"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:textColor="#4D5051"
        android:text="새로운 링크를 받아오고 있습니다."
        />
    
    <View
        android:id="@+id/openCodeDialogHorizonGuide"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#95989A"
        app:layout_constraintTop_toTopOf="@+id/dialog_open_code_view"
        app:layout_constraintRight_toRightOf="@+id/dialog_open_code_view"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_open_code_view"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"/>
    
    <View
        android:id="@+id/openCodeDialogVerticalGuide"
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:background="#4D5051"
        app:layout_constraintTop_toBottomOf="@+id/openCodeDialogHorizonGuide"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_open_code_view"
        app:layout_constraintRight_toRightOf="@+id/dialog_open_code_view"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_open_code_view"/>

    <Button
        android:id="@+id/openCodePasteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/openCodeDialogHorizonGuide"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_open_code_view"
        app:layout_constraintRight_toRightOf="@+id/openCodeDialogVerticalGuide"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_open_code_view"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@null"
        android:text="복사하기"
        android:textSize="20sp"
        android:textColor="#FC7336"/>

    <Button
        android:id="@+id/openCodeSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/openCodeDialogHorizonGuide"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_open_code_view"
        app:layout_constraintRight_toRightOf="@+id/dialog_open_code_view"
        app:layout_constraintLeft_toLeftOf="@+id/openCodeDialogVerticalGuide"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@null"
        android:text="보내기"
        android:textSize="20sp"
        android:textColor="#FC7336"/>

</android.support.constraint.ConstraintLayout>